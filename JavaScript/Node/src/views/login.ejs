<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class=" text-center">Criar conta ou Entrar</h1>
            <p class="text-center lead">Faça o login ou crie a sua conta abaixo</p>

            <div class="row">
                
                <div class="col-lg">
                    <h4>Faça o seu cadastro</h4>
                    <p>Se você ainda não tem conta, preencha o formulario abaixo</p>
                    
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="form-group">
                          <label for="email">Digite o seu Email:</label>
                          <input type="email" class="form-control" id="email" aria-describedby="email" autocomplete="off" name="email">
                        </div>
                        
                        <div class="form-group">
                            <label for="senha">Digite a sua senha:</label>
                            <input type="password" class="form-control" id="senha" aria-describedby="senha" autocomplete="off" name="senha">
                          </div>
                        
                          <button type="submit" class="btn btn-primary">Concluir cadastro</button>
                      </form>
                </div>
                
                <div class="col-lg">
                    <h4>Faça seu login</h4>
                    <p>Se você já tem uma conta, faça login abaixo</p>
                    
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="email">Digite o seu Email:</label>
                          <input type="email" class="form-control" id="email" aria-describedby="email" autocomplete="off" name="email">
                        </div>
                        
                        <div class="form-group">
                            <label for="senha">Digite a sua senha:</label>
                            <input type="password" class="form-control" id="senha" aria-describedby="senha" autocomplete="off" name="senha">
                          </div>
                        
                          <button type="submit" class="btn btn-primary">Fazer login</button>
                      </form>
                </div>
            
            </div>

        </div>
        
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>