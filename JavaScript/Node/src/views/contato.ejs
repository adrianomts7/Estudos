<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        
        <div class="col-lg-8 my-3">
            <h1 class=" text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include('includes/messages') %>

            <form action="/contato/register" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="form-group">
                  <label for="nome">Digite o nome: </label>
                  <input type="text" class="form-control" id="nome" aria-describedby="nome" autocomplete="off" name="nome" value=" <%= contato.nome %>">
                </div>
                
                <div class="form-group">
                    <label for="sobrenome">Digite o Sobrenome: </label>
                    <input type="text" class="form-control" id="sobrenome" aria-describedby="sobrenome" autocomplete="off" name="sobrenome" value=" <%= contato.sobrenome %>" >
                </div>

                <div class="form-group">
                    <label for="email">Digite o Email:</label>
                    <input type="email" class="form-control" id="email" aria-describedby="email" autocomplete="off" name="email" value=" <%= contato.email %>" >
                </div>

                <div class="form-group">
                    <label for="numero">Digite o NÃºmero: </label>
                    <input type="tel" class="form-control" id="telefone" aria-describedby="telefone" autocomplete="off" name="telefone" value="<%= contato.telefone %>" >
                </div>

                  <button type="submit" class="btn btn-primary">Salvar Contato</button>
              </form>

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer') %>